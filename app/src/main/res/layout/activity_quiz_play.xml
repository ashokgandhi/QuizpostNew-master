<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".ProjectClassFile.QuizPlay">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/Question"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:text="Question:"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/QuizQuestionCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:text="1/10"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/QuizQuesSkip"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:padding="@dimen/_5sdp"
                android:text="Skip"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/QuizQuesSkipCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_weight="1"
                android:padding="@dimen/_5sdp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:textStyle="bold" />
        </LinearLayout>

        />
    </android.support.v7.widget.Toolbar>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <TextView
        android:id="@+id/QuizQuestion"
        android:padding="@dimen/_5sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="2"
        android:hint="Which is the most abundant gas in the earth's atmosphere?"
        android:textSize="@dimen/_15sdp"/>

    <ImageView
        android:id="@+id/QuizImageShow"
        android:layout_width="wrap_content"
        android:elevation="@dimen/_10sdp"
        android:padding="@dimen/_5sdp"
        android:layout_height="@dimen/_120sdp"
        android:src="@drawable/honey"/>

<RadioGroup
    android:id="@+id/AnswerOptions"
    android:layout_width="wrap_content"
    android:layout_marginTop="@dimen/_10sdp"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RadioButton
        android:id="@+id/OPtionA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option A"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"/>
    <RadioButton
        android:id="@+id/OPtionB"
        android:textSize="@dimen/_15sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option B"

        android:textStyle="bold"/>


        <RadioButton
        android:id="@+id/OPtionC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Option C"
            android:layout_weight="1"
        android:textSize="@dimen/_15sdp"
        android:textStyle="bold"/>

        <RadioButton
            android:id="@+id/OPtionD"
            android:layout_weight="1"
            android:textSize="@dimen/_15sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Option D"
            android:textStyle="bold"/></RadioGroup>

    <Button
        android:layout_margin="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:id="@+id/ButtonSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBMIT"/>



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_10sdp">
        <Button
            android:id="@+id/ButtonSkip"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Skip"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_margin="@dimen/_15sdp">
        <Button
            android:id="@+id/ButtonNext"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            />

    </LinearLayout>

</LinearLayout>

</LinearLayout>


    </LinearLayout>
</ScrollView>

</LinearLayout>