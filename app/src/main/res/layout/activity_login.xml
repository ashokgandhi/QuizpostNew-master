<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/coordinatorLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".ProjectClassFile.Login">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@drawable/exam"
        android:orientation="vertical" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

<de.hdodenhof.circleimageview.CircleImageView
    android:id="@+id/CircleLogo"
    android:layout_width="@dimen/_90sdp"
    android:layout_height="@dimen/_90sdp"
    android:src="@drawable/brain"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="@dimen/_40sdp"/>
    <TextView
        android:id="@+id/pariksha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pariksha"
        android:layout_marginTop="@dimen/_10sdp"
        android:gravity="center"
        android:textSize="@dimen/_25sdp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:fontFamily="serif"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The online quiz app"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        app:cardBackgroundColor="#7AEDEAEA"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardPreventCornerOverlap="false"
        app:cardMaxElevation="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_220sdp"
       android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/_10sdp"
            android:orientation="vertical">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text"
                android:layout_marginTop="@dimen/_10sdp">

                <EditText
                    android:id="@+id/user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/input_layout_email"
                    android:drawableLeft="@drawable/ic_portrait_black_24dp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:ems="10"
                 android:textColor="@color/registerText"
                    android:maxLength="10"
                    android:hint="Mobile no"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColorHint="#125bd1"
                    android:textStyle="bold" />


            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true"
                android:layout_below="@+id/input_layout_email">

                <EditText
                    android:id="@+id/pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/layout_password"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:drawablePadding="@dimen/_10sdp"
                    android:drawableStart="@drawable/ic_lock_black_24dp"
                    android:hint="Password"
                    android:textColorHint="#125bd1"
                    android:password="true"
                    android:textColor="#125bd1"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textStyle="bold"
                    />



            </android.support.design.widget.TextInputLayout>



           <LinearLayout
               android:id="@+id/lineartext"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:weightSum="5"
               android:layout_marginTop="@dimen/_10sdp"
               android:orientation="horizontal">



               <TextView
                   android:id="@+id/register"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/_20sdp"
                   android:textColor="@color/registerText"
                   android:layout_weight="2.5"
                   android:textStyle="bold"
                   android:paddingTop="@dimen/_2sdp"
                   android:textAlignment="center"
                   android:textColorHint="#ffffff"
                   android:layout_gravity="center"
                   android:text="Register Here?"/>
               <TextView
                   android:id="@+id/forgetPassword"
                   android:layout_width="wrap_content"
                   android:layout_height="@dimen/_20sdp"
                   android:textStyle="bold"
                   android:gravity="right"
                   android:paddingTop="@dimen/_2sdp"
                   android:textColorHint="#ffffff"
                   android:layout_weight="2.5"
                   android:textAlignment="center"
                   android:text="Forget Password?"
                   android:textColor="@color/registerText"/>



           </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp">

            <Button
                android:id="@+id/loginbutton"
                android:layout_width="@dimen/_250sdp"
                android:layout_height="@dimen/_65sdp"
                android:layout_margin="@dimen/_20sdp"
                android:textColor="#ffffff"
                android:textSize="@dimen/_20sdp"

                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:text="LOGIN"
               android:background="@drawable/btn_round_primary"/>

                <ProgressBar
                    android:id="@+id/ProgressBarLogin"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                  android:layout_centerHorizontal="true"
                    android:visibility="invisible"
                    android:layout_centerVertical="true"
                    />
              <!--  <com.airbnb.lottie.LottieAnimationView
                    android:id="@+id/checkview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    />-->

            </RelativeLayout>


        </LinearLayout>
        <!--</android.support.v7.widget.CardView>-->

    </android.support.v7.widget.CardView>
    </LinearLayout>




    </FrameLayout>


