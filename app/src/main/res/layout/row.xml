<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linear1">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants"
    android:padding="@dimen/_5sdp">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/_5sdp">

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img"
            android:layout_width="@dimen/_80sdp"
            android:layout_height="@dimen/_90sdp"
            android:layout_marginTop="10dp"
            android:padding="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_4sdp"
            android:src="@drawable/pic" />

        <TextView
            android:id="@+id/company1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@+id/img"
            android:text="Silverwing Technologies"
            android:textColor="#000000"
            android:layout_marginLeft="@dimen/_4sdp"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/aboutus1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/details"
            android:layout_below="@+id/company1"
            android:layout_toRightOf="@+id/img"
            android:layout_marginLeft="@dimen/_4sdp"
            android:hint="uhyuh"/>


    </RelativeLayout>


        <RelativeLayout
            android:id="@+id/relative2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp">


            <android.support.v7.widget.CardView
                android:id="@+id/cardview"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_120sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:elevation="@dimen/_10sdp"
                android:padding="@dimen/_30sdp"
                app:cardBackgroundColor="#E7E4E4">

                <RelativeLayout
                    android:id="@+id/relative3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/Skill"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_9sdp"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:drawableLeft="@drawable/education"
                        android:drawablePadding="@dimen/_10sdp"
                        android:text="Skills :"
                        android:textColor="#000000"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:id="@+id/experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_4sdp"
                        android:layout_toRightOf="@+id/Skill"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Android  Java  PHP"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/JobType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/Skill"
                        android:layout_marginLeft="@dimen/_9sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/eligibility"
                        android:drawablePadding="@dimen/_7sdp"
                        android:text="Job Type :"
                        android:textColor="#000000"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/subject"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/experience"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/JobType"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="Part Time , Full Time"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/Salary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/JobType"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:drawableLeft="@drawable/indian"
                        android:drawablePadding="@dimen/_13sdp"
                        android:text="Salary :"
                        android:textColor="#000000"
                        android:textSize="@dimen/_10sdp" />


                    <TextView
                        android:id="@+id/Currency"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/subject"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/JobType"
                        android:paddingLeft="@dimen/_10sdp"
                        android:text="₹25000 To ₹30000 "
                        android:textSize="@dimen/_10sdp" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/button1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardview"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:background="@drawable/btn_rounded_green"
                android:elevation="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:text="Apply"
                android:textColor="#ffffff" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>


</LinearLayout>